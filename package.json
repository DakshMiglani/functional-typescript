{
  "name": "functional-typescript",
  "version": "0.0.1",
  "description": "TypeScript standard for rock solid serverless functions.",
  "repository": "https://github.com/transitive-bullshit/functional-typescript",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "bin": {
    "fts": "build/main/cli.js"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "typescript",
    "serverless",
    "lambda",
    "function",
    "functional",
    "faas",
    "rpc",
    "jsonrpc",
    "json",
    "jsonschema",
    "stdlib"
  ],
  "scripts": {
    "start": "run-s clean \"build:main -- -w\"",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc -- ava -v",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.test.ts --target ES6 --mode file --out build/docs",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "clean": "trash build test"
  },
  "dependencies": {
    "accepts": "^1.3.5",
    "ajv": "^6.7.0",
    "array-equal": "^1.0.0",
    "commander": "^2.19.0",
    "content-type": "^1.0.4",
    "cors": "^2.8.5",
    "doctrine": "^3.0.0",
    "fs-extra": "^7.0.1",
    "is-stream": "^1.1.0",
    "micro": "^9.3.3",
    "parseurl": "^1.3.2",
    "qs": "^6.6.0",
    "resolve": "^1.9.0",
    "ts-simple-ast": "^21.0.0",
    "type-is": "^1.6.16",
    "typescript-json-schema": "^0.34.0"
  },
  "devDependencies": {
    "@types/accepts": "^1.3.5",
    "@types/ajv": "^1.0.0",
    "@types/content-type": "^1.1.2",
    "@types/cors": "^2.8.4",
    "@types/doctrine": "^0.0.3",
    "@types/fs-extra": "^5.0.4",
    "@types/get-port": "^4.0.1",
    "@types/globby": "^8.0.0",
    "@types/got": "^9.3.0",
    "@types/is-stream": "^1.1.0",
    "@types/json-schema": "^7.0.1",
    "@types/micro": "^7.3.3",
    "@types/node": "^10.12.18",
    "@types/parseurl": "^1.3.1",
    "@types/pify": "^3.0.2",
    "@types/qs": "^6.5.1",
    "@types/resolve": "^0.0.8",
    "@types/seedrandom": "^2.4.27",
    "@types/tempy": "^0.2.0",
    "@types/type-is": "^1.6.2",
    "ava": "^1.1.0",
    "clone-deep": "^4.0.1",
    "codecov": "^3.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "get-port": "^4.1.0",
    "gh-pages": "^2.0.1",
    "globby": "^9.0.0",
    "got": "^9.6.0",
    "json-schema-faker": "^0.5.0-rc16",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "opn-cli": "^4.0.0",
    "pify": "^4.0.1",
    "prettier": "^1.15.2",
    "seedrandom": "^2.4.4",
    "standard-version": "^4.4.0",
    "tempy": "^0.2.1",
    "trash-cli": "^1.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.2.2"
  },
  "ava": {
    "failFast": true,
    "snapshotDir": "./.snapshots",
    "concurrency": 1,
    "files": [
      "build/main/**/*.test.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "nyc": {
    "exclude": [
      "**/*.test.js"
    ]
  }
}
