{
  "name": "functional-typescript",
  "version": "0.0.1",
  "description": "TypeScript standard for serverless functions.",
  "repository": "https://github.com/transitive-bullshit/functional-typescript",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "bin": {
    "fts": "build/main/cli.js"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "typescript",
    "serverless",
    "lambda",
    "function",
    "functional",
    "faas",
    "rpc",
    "stdlib"
  ],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc -- ava -v",
    "start": "run-s clean build:main && run-p \"build:main -- -w\"",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.test.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.test.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "clean": "trash build test",
    "all": "run-s reset test cov:check doc:html",
    "prepare-release": "run-s all version doc:publish",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('functional-typescript must be installed with Yarn: https://yarnpkg.com/')\""
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.4",
    "array-equal": "^1.0.0",
    "commander": "^2.19.0",
    "doctrine": "^3.0.0",
    "fs-extra": "^7.0.1",
    "ts-simple-ast": "^21.0.0",
    "typescript-json-schema": "^0.34.0"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/doctrine": "^0.0.3",
    "@types/json-schema": "^7.0.1",
    "@types/node": "^10.12.18",
    "ajv": "^6.7.0",
    "ava": "^1.1.0",
    "codecov": "^3.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^2.0.1",
    "globby": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "opn-cli": "^4.0.0",
    "prettier": "^1.15.2",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "ava": {
    "failFast": true,
    "snapshotDir": "./.snapshots",
    "files": [
      "build/main/**/*.test.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "nyc": {
    "exclude": [
      "**/*.test.js"
    ]
  }
}
